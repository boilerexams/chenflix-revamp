---
import CanvasContainer from '../components/CanvasContainer.astro'
import Layout from '../components/Layout.astro'
// import Link from '../components/Link.astro'
import AllClassIcons from '../components/allClassIcons.astro'


---



<Layout title="Chenflix">
  <main>
    
    <CanvasContainer/>
    <img class="overlay-image" src='images/chenflix.png' alt="Logo" />
    <AllClassIcons class="icons"/>
    <!-- <Link class="link" href="https://www.boilerexams.com" target="_blank" rel="noopener noreferrer">By Boilerexams</Link> -->

  </main>
</Layout>

<style lang="scss">
  main {
    width: 100%;
    min-height: 100vh;
    background-color: black;
  }
  .link {
    margin-top: 2rem;
    position: absolute;
    bottom: 1rem;
    right: 10rem;
  }

  .overlay-image {
    position: absolute;
    padding-top: 10%;
    left: 50%;
    width: 30%;
    // min-width: 50vw;
    transform: translate(-50%, -50%);
  }



  /* CSS for mobile devices */
  @media (max-width: 767px) {


      main {
      width: 100%;
      min-height: 100vh;
      background-color: black;
    }
    .overlay-image {
      position: absolute;
      padding-top: 25%;
      left: 50%;
      width: 60%;
      // min-width: 50vw;
      transform: translate(-50%, -50%);
      
    }

    .icons {
      padding-bottom: 1em;
      
    }
  }



</style>


