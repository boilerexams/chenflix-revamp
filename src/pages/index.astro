---
import CanvasContainer from '../components/CanvasContainer.astro'
import Layout from '../components/Layout.astro'
import Link from '../components/Link.astro'
import AllClassIcons from '../components/allClassIcons.astro'


---



<Layout title="Chenflix">
  <main>
    
    <CanvasContainer/>
    <img class="overlay-image" src='images/chenflix.png' alt="Logo" />
    <AllClassIcons/>
    <Link class="link" href="https://www.boilerexams.com" target="_blank" rel="noopener noreferrer">By Boilerexams</Link>

  </main>
</Layout>

<style lang="scss">
  main {
    width: 100%;
    height: 100%;
    background-color: black;
  }
  .link {
    position: absolute;
    bottom: 1rem;
    right: 10rem;
  }

  .overlay-image {
    position: absolute;
    top: 10%;
    left: 50%;
    width: 30%;
    transform: translate(-50%, -50%);
  }

</style>


