---
import ClassEvent from '../components/classEvent.astro'
import chen from '../../public/images/chenflix.png'
// import MyComponent from '../components/slider'
---

<html>
  <head>
    <title></title>
    <link rel="icon" type="image/svg+xml" href="images/capyFav.png" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
  </head>

  <body class="bg-black text-white">
    <div class="mx-auto w-1/3 pt-4">
      <a href="/">
        <img src={chen.src} alt="Logo" />
      </a>
    </div>

    <div class="flex flex-col items-center">
      <div class="mb-2 text-3xl">
        <h1>MA 16100 Spring 2022</h1>
      </div>
      <button color="success" id="reverseButton" class="text-2xl hover:text-red-600"><i class="fa-solid fa-arrows-rotate" id="icon"></i></button>
    </div>

    <div id="classEventContainer" class="relative flex h-auto flex-col items-center justify-center gap-3">
      <ClassEvent
        weekday="Mon"
        description="Lesson 0 (1.1 Review of Functions and 1.2 Representing Functions)"
        date="1/10"
        notes="https://www.math.purdue.edu/~chenjk/MA161S22/Lesson%200%20%281.1,%201.2%29.pdf"
        videos = "https://mediaspace.itap.purdue.edu/media/Spring+2022+-+MA161+-+Chen/1_9p8gxlsg"
      />

      <!-- </div> -->
    </div>
  </body>
</html>

<script>
  const button = document.getElementById('reverseButton')
  const icon = document.getElementById('icon')
  const container = document.getElementById('classEventContainer')
  let isSpinning = false

  if (button && container && icon) {
    button.addEventListener('click', function () {
      Array.from(container.children)
        .reverse()
        .forEach((child) => container.appendChild(child))

      // Add or remove the spin animation
      if (isSpinning) {
        icon.classList.remove('fa-spin')
        icon.classList.add('fa-spin-reverse')
      }
      // else {
      //   icon.classList.remove('fa-spin-reverse');
      //   icon.classList.add('fa-spin');
      // }

      isSpinning = !isSpinning

      setTimeout(function () {
        icon.classList.remove('fa-spin')
        icon.classList.remove('fa-spin-reverse')
      }, 1050)
    })
  }
</script>

<style>
  .fa-spin-reverse {
    animation-direction: reverse;
  }
</style>

<style lang="scss">
  body {
    font-family: 'Poppins', sans-serif;
  }
</style>
