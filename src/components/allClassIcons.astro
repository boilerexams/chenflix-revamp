---


<div class="icon-columns">
    <div class = "icon-column">
        <CourseCard semesterList = {['Spring 2022']} semesterLinks = {['/ma161SP22',]} courseAbbreviation="ma16100" courseName = "MA 16100" courseDescr = "Plane Analytic Geometry And Calculus I"/>
        <CourseCard semesterList = {['Fall 2023', 'Fall 2022', 'Fall 2019']} semesterLinks= {['/ma162FA23', '/ma162FA22']} courseAbbreviation="ma16200" courseName = "MA 16200" courseDescr = "Plane Analytic Geometry And Calculus II"/>
        <CourseCard semesterList = {['Summer 2023', 'Spring 2023', 'Fall 2021']} semesterLinks = {['/ma261SU23','/ma261SP23', '/ma261FA21']} courseAbbreviation="ma26100" courseName = "MA 26100" courseDescr = "Multivariate Calculus"/>
    </div>

    <div class = "icon-column">
        <CourseCard semesterList = {['Summer 2018', 'Chen\'s Corner!']}  semesterLinks = {['/ma265SU18', '/chenCorner']} courseAbbreviation="ma26500" courseName = "MA 26500" courseDescr = "Linear Algebra"/>
        <CourseCard semesterList = {['Summer 2016']}  semesterLinks = {[]} courseAbbreviation="ma26600" courseName = "MA 26600" courseDescr = "Ordinary Differential Equations"/>
        <CourseCard semesterList = {['Spring 2024', 'Summer 2019']}  semesterLinks = {['/ma303SP24']} courseAbbreviation="ma30300" courseName = "MA 30300" courseDescr = "Differential Equations And Partial Differential Equations For Engineering And the Sciences"/>
    </div>
    
  </div>



<style>
    .icon-columns {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 6%;
        height: 100vh;
    }

    .icon-column {
        flex-direction: column;
        align-items: center;
        display: relative;
        /* justify-content: center; */
        max-width: 18%;
        min-width: 18%;
        /* min-width: 500px; */

        overflow: hidden
        
    }

    /* CSS for devices with width less than 767px */
    @media (max-width: 767px) {
        .icon-columns {
            flex-direction: column;
            /* justify-content: space-between; */
            align-items: center;
            width: 100%;
            height: 100%;
            padding-top: 20%;
            padding-bottom: 5%;
            background-color: black;
        }
        .icon-column {
            background-color: black;
            min-width: 65%;
            
            
        }
    }

</style>